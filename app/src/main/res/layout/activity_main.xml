<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/ll_nav"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_synchronized_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="普通锁，不同的对象，可同时访问"
            android:textSize="10sp" />


        <Button
            android:id="@+id/btn_synchronized_2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="普通锁，相同对象，不同的加锁代码块，不能同时访问"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_synchronized_3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="静态锁，不同对象，相同方法，不能同时访问"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_synchronized_4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="静态锁，不同对象，不同的加锁代码块，不能同时访问"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_volatile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Volatile测试"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_wait_notify"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Wait_Notify测试"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_lock"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="lock测试"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_lock_interrupt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="lock中断测试"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_dead_lock"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="点我死锁！"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_log"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="log"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ll_nav"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>