<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_nav"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btn_synchronized_1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="普通锁，不同的对象，可同时访问"
                android:textSize="10sp" />


            <Button
                android:id="@+id/btn_synchronized_2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="普通锁，相同对象，不同的加锁代码块，不能同时访问"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_synchronized_3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="静态锁，不同对象，相同方法，不能同时访问"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_synchronized_4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="静态锁，不同对象，不同的加锁代码块，不能同时访问"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_volatile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="Volatile测试"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_wait_notify"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="Wait_Notify测试"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_lock"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="lock测试"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_lock_interrupt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="lock中断测试"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_interrupt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="中断测试"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_dead_lock"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="点我死锁！"
                android:textSize="10sp" />


            <Button
                android:id="@+id/btn_join"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="joinh和yeild方法！"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_yeild"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="joinh和yeild方法！"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_alternate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="交替打印0-100数字！"
                android:textSize="10sp" />
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="log" />

</LinearLayout>